-- write a hello world app in elm
module Main exposing (main)

import Html exposing (Html)

main : Html msg 
main = 
    input 
        |> String.trim
        |> String.toList
        |> listCharToListNumber
        |> movesToBasement
        |> Debug.toString 
        |> Html.text 

listCharToListNumber : List Char -> List Int
listCharToListNumber listChar = 
    listChar
        |> List.map (\char -> 
            case char of 
                '(' -> 1
                ')' -> -1
                _ -> 0
        )

-- write a fuction that takes a list of numbers and returns the index of the first time the sum of the numbers is -1
movesToBasement : List Int -> Int
movesToBasement listInt = 
    movesToBasementHelper listInt 0 0

movesToBasementHelper : List Int -> Int -> Int -> Int
movesToBasementHelper listInt index sum = 
    case listInt of 
        [] -> 0
        x :: xs -> 
            let newSum = sum + x
            in 
                if newSum < 0 then 
                    index + 1
                else 
                    movesToBasementHelper xs (index + 1) newSum


